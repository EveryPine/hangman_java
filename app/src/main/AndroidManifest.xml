<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="미니게임세상"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullScreenTheme"
        tools:targetApi="31">
        <activity
            android:name=".main.view.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".music.BgmService"/>

        <activity android:name=".debug.view.DebugActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".record.view.RecordActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".game.view.GameActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".hangman.view.HangmanActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".card.view.CardActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".memory.view.MemoryActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>