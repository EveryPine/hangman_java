<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:textoutline="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/record_frame_bg"
        android:paddingVertical="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최고 기록"
            android:textColor="@color/black"
            android:fontFamily="@font/sys_font"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <com.example.hangman_java.base.TextOutLineView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sys_font_family"
                        android:text="난이도"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/record_btn_bg"
                        textoutline:textStroke="true"
                        textoutline:textStrokeColor="#605F5F"
                        textoutline:textStrokeWidth="5.0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <com.example.hangman_java.base.TextOutLineView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:fontFamily="@font/sys_font_family"
                        android:textAlignment="center"
                        android:text="기록"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/record_btn_bg"
                        textoutline:textStroke="true"
                        textoutline:textStrokeColor="#605F5F"
                        textoutline:textStrokeWidth="5.0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal">

                    <com.example.hangman_java.base.TextOutLineView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="시간"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:fontFamily="@font/sys_font_family"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/record_btn_bg"
                        textoutline:textStroke="true"
                        textoutline:textStrokeColor="#605F5F"
                        textoutline:textStrokeWidth="5.0"/>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:id="@+id/trRecord"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/record_easy_bar">

                <com.example.hangman_java.base.TextOutLineView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="쉬움"
                    android:fontFamily="@font/sys_font"
                    android:textSize="18dp"
                    android:textColor="@color/easy"
                    android:layout_marginVertical="5dp"
                    textoutline:textStroke="true"
                    textoutline:textStrokeColor="@color/gray"
                    textoutline:textStrokeWidth="5.0"/>

                <com.example.hangman_java.base.TextOutLineView
                    android:id="@+id/tvEasyRecord"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="00"
                    android:textColor="@color/easy"
                    android:fontFamily="@font/sys_font"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"
                    textoutline:textStroke="true"
                    textoutline:textStrokeColor="@color/gray"
                    textoutline:textStrokeWidth="5.0"/>

                <com.example.hangman_java.base.TextOutLineView
                    android:id="@+id/tvEasyDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:text="0000년 00월 00일"
                    android:textColor="@color/easy"
                    android:fontFamily="@font/sys_font"
                    android:textSize="15dp"
                    android:layout_marginVertical="5dp"
                    textoutline:textStroke="true"
                    textoutline:textStrokeColor="@color/gray"
                    textoutline:textStrokeWidth="5.0"/>

            </TableRow>

            <TableRow
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/record_normal_bar">

                <com.example.hangman_java.base.TextOutLineView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="보통"
                    android:fontFamily="@font/sys_font"
                    android:textSize="18dp"
                    android:textColor="@color/normal"
                    android:layout_marginVertical="5dp"
                    textoutline:textStroke="true"
                    textoutline:textStrokeColor="@color/gray"
                    textoutline:textStrokeWidth="5.0"/>

                <com.example.hangman_java.base.TextOutLineView
                    android:id="@+id/tvNormalRecord"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="00"
                    android:textColor="@color/normal"
                    android:fontFamily="@font/sys_font"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"
                    textoutline:textStroke="true"
                    textoutline:textStrokeColor="@color/gray"
                    textoutline:textStrokeWidth="5.0"/>

                <com.example.hangman_java.base.TextOutLineView
                    android:id="@+id/tvNormalDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:text="0000년 00월 00일"
                    android:textColor="@color/normal"
                    android:fontFamily="@font/sys_font"
                    android:textSize="15dp"
                    android:layout_marginVertical="5dp"
                    textoutline:textStroke="true"
                    textoutline:textStrokeColor="@color/gray"
                    textoutline:textStrokeWidth="5.0"/>

            </TableRow>

            <TableRow
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/record_hard_bar">

                <com.example.hangman_java.base.TextOutLineView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="어려움"
                    android:textColor="@color/hard"
                    android:fontFamily="@font/sys_font"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"
                    textoutline:textStroke="true"
                    textoutline:textStrokeColor="@color/gray"
                    textoutline:textStrokeWidth="5.0"/>

                <com.example.hangman_java.base.TextOutLineView
                    android:id="@+id/tvHardRecord"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="00"
                    android:textColor="@color/hard"
                    android:fontFamily="@font/sys_font"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"
                    textoutline:textStroke="true"
                    textoutline:textStrokeColor="@color/gray"
                    textoutline:textStrokeWidth="5.0"/>

                <com.example.hangman_java.base.TextOutLineView
                    android:id="@+id/tvHardDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:text="0000년 00월 00일"
                    android:textColor="@color/hard"
                    android:fontFamily="@font/sys_font"
                    android:textSize="15dp"
                    android:layout_marginVertical="5dp"
                    textoutline:textStroke="true"
                    textoutline:textStrokeColor="@color/gray"
                    textoutline:textStrokeWidth="5.0"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:background="@drawable/record_frame_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최근 기록"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/sys_font"
            android:textSize="20dp"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:id="@+id/tvGoneMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기록이 없습니다!"
            android:fontFamily="@font/sys_font"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

        <TableLayout
            android:id="@+id/tlRecentRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <com.example.hangman_java.base.TextOutLineView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sys_font_family"
                        android:text="난이도"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/record_btn_bg"
                        textoutline:textStroke="true"
                        textoutline:textStrokeColor="#605F5F"
                        textoutline:textStrokeWidth="5.0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <com.example.hangman_java.base.TextOutLineView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:fontFamily="@font/sys_font_family"
                        android:textAlignment="center"
                        android:text="기록"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/record_btn_bg"
                        textoutline:textStroke="true"
                        textoutline:textStrokeColor="#605F5F"
                        textoutline:textStrokeWidth="5.0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal">

                    <com.example.hangman_java.base.TextOutLineView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="시간"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:fontFamily="@font/sys_font_family"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/record_btn_bg"
                        textoutline:textStroke="true"
                        textoutline:textStrokeColor="#605F5F"
                        textoutline:textStrokeWidth="5.0"/>

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </TableLayout>

</LinearLayout>

