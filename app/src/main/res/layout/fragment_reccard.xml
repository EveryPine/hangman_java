<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  최고 기록"
        android:fontFamily="@font/system_font"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        android:textAlignment="viewStart"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginVertical="5dp"
            android:background="#ECBABA">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="난이도"
                android:fontFamily="@font/system_font"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="기록"
                android:fontFamily="@font/system_font"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:text="시간"
                android:fontFamily="@font/system_font"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/trRecord"
            android:layout_marginVertical="5dp"
            android:background="#ECBABA">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="쉬움"
                android:fontFamily="@font/system_font"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/tvEasyRecord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="00"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/tvEasyDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/system_font"
                android:textAlignment="center"
                android:text="0000년 00월 00일"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

        </TableRow>

        <TableRow
            android:layout_marginVertical="5dp"
            android:background="#ECBABA">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="보통"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/tvNormalRecord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="00"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/tvNormalDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="0000년 00월 00일"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

        </TableRow>

        <TableRow
            android:layout_marginVertical="5dp"
            android:background="#ECBABA">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="어려움"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/tvHardRecord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="00"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/tvHardDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="0000년 00월 00일"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/system_font"
        android:text="  최근 기록"
        android:textSize="20dp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/tvGoneMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기록이 없습니다!"
        android:fontFamily="@font/system_font"
        android:textSize="20dp"
        android:textAlignment="center"
        android:visibility="gone"/>

    <TableLayout
        android:id="@+id/tlRecentRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginVertical="5dp"
            android:background="#ECBABA">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="난이도"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="기록"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:fontFamily="@font/system_font"
                android:text="시간"
                android:textSize="18dp"
                android:layout_marginVertical="5dp"/>

        </TableRow>

    </TableLayout>

</TableLayout>