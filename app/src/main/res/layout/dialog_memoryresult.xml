<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:textoutline="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/base_result_bg">

    <com.example.hangman_java.base.TextOutLineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/sys_font"
        android:text="GAME OVER"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="46dp"
        app:textStroke="true"
        app:textStrokeWidth="20"
        app:textStrokeColor="#af00"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.hangman_java.base.TextOutLineView
            android:id="@+id/tvFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최종점수 : 00"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/sys_font"
            app:textStroke="true"
            app:textStrokeWidth="10"
            app:textStrokeColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp">
        <com.example.hangman_java.base.TextOutLineView
            android:id="@+id/tvBestScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최고점수 : 00"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:fontFamily="@font/sys_font"
            app:textStroke="true"
            app:textStrokeWidth="10"
            app:textStrokeColor="@color/black"/>

    </LinearLayout>

    <com.example.hangman_java.base.TextOutLineView
        android:id="@+id/tvNoticeBest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신기록 달성!"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/sys_font"
        android:layout_marginBottom="40dp"
        app:textStroke="true"
        app:textStrokeColor="#0EA30E"
        app:textStrokeWidth="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnGoMain"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="메인으로"
            android:textSize="17dp"
            android:fontFamily="@font/sys_font_family"
            android:background="@drawable/base_button_green"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>