<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/transparent_0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임오버"
        android:textSize="50dp"
        android:textColor="#af00"
        android:layout_marginVertical="30dp"
        android:fontFamily="@font/system_font"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최종점수 : "
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/system_font"/>

        <TextView
            android:id="@+id/tvFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/system_font"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최고점수 : "
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:fontFamily="@font/system_font"/>

        <TextView
            android:id="@+id/tvBestScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/system_font"/>

    </LinearLayout>



    <TextView
        android:id="@+id/tvNoticeBest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신기록 달성!"
        android:textSize="30dp"
        android:textColor="#0d0"
        android:textAlignment="center"
        android:fontFamily="@font/system_font"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btnGoMain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="메인 화면으로"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/system_font"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnRestart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="다시 시작하기"
            android:textSize="20dp"
            android:textColor="#000"
            android:fontFamily="@font/system_font"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>