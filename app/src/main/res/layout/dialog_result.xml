<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:fontFamily="@font/system_font"
        android:text="게임오버"
        android:textColor="#af00"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최종점수 : "
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/system_font"/>

        <TextView
            android:id="@+id/tvFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/system_font"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최고점수 : "
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:fontFamily="@font/system_font"/>

        <TextView
            android:id="@+id/tvBestScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/system_font"/>

    </LinearLayout>



    <TextView
        android:id="@+id/tvNoticeBest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신기록 달성!"
        android:textSize="30dp"
        android:textColor="#0d0"
        android:textAlignment="center"
        android:fontFamily="@font/system_font"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageButton
            android:id="@+id/btnGoMain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/home_fill0_wght400_grad0_opsz24"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/btnRestart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/reply_fill0_wght400_grad0_opsz24"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>