<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/base_title_bg"
        android:fontFamily="@font/button_font_family"
        android:text="게임 선택"
        android:textAlignment="center"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/game_game">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="카드 뒤집기"
                android:textColor="@color/white"
                android:fontFamily="@font/sys_font"
                android:textAlignment="center"
                android:textSize="30dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="#D8D5D5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="20dp"
                android:text="제한 시간 내 제시된 카드들을 오름차순으로 터치하여 득점하는 게임입니다! 틀리면 3초동안 패널티가 주어지므로 신중하게 선택해주세요!"
                android:textColor="@color/white"
                android:fontFamily="@font/sys_font"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnHangman"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="30dp"
            android:clickable="true"
            android:background="@drawable/game_game">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="행맨"
                android:fontFamily="@font/sys_font"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D5D5"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/explainHangman"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMemory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:background="@drawable/game_game">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기억력 테스트"
                android:fontFamily="@font/sys_font"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D5D5"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/explainMemory"
                android:fontFamily="@font/sys_font"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>